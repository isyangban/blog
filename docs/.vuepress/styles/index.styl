body
  padding: 0
  margin: 0
  background-color: $backgroundColor
  color: $foregroundColor
  font-size: 1.5rem
  font-weight: 400

.container
  max-width: 80rem

h1
  font-size: 3rem
  font-weight: 400

h2
  font-size: 2.4rem

h3
  font-size 1.8rem

a 
  color: $foregroundColor

// Markdown 으로 작성한 링크는 다른색으로
.content__default
  a
    color: $liliyaBlueLight

div.extra-class
  pre
    padding: 0.2rem
    border-left: 0.2rem solid $rozaliyaRed 

p
  margin-bottom: 1rem

code
  background-color: #2d2d2d
  color: $white
  font-size: 1.6rem

blockquote
  border-left: 0.2rem solid $rozaliyaRed 


.button-red
  background-color: $rozaliyaRed 
  border-color: $rozaliyaRed 

.button-small
  padding: 0 1.5rem
  border-radius: 1.5rem

.button-disabled
  pointer-events: none
  opacity: 0.4

// Disable Default outbound icon
.icon.outbound
  display none !important 