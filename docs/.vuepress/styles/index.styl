body
  padding: 0
  margin: 0
  background-color: $backgroundColor
  color: $foregroundColor
  font-size: 1.5rem
  font-weight: 300

.container
  max-width: 65rem

h1
  font-size: 3rem

h2
  font-size: 2.4rem

h3
  font-size 1.8rem

a 
  color: $foregroundColor

div.extra-class
  pre
    padding: 0.2rem
    border-left: 0.2rem solid $rozaliyaRed 

code
  background-color: #2d2d2d
  font-size: 1.6rem

blockquote
  border-left: 0.2rem solid $rozaliyaRed 


.button-red
  background-color: $rozaliyaRed 
  border-color: $rozaliyaRed 

.button-small
  padding: 0 1.5rem
  border-radius: 1.5rem

.button-disabled
  pointer-events: none
  opacity: 0.4